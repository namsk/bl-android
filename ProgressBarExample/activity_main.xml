<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressCircle" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn = "프로그레스바 보이기"
        android:textOff = "프로그레스바 숨기기"
        android:onClick="onButtonClick"
        android:id="@+id/buttonToggleProgressCircle" />



    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:secondaryProgress="0"
        android:layout_marginTop="50dp"
        android:id="@+id/progressHorizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Primary Progress Control" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="증가"
            android:onClick="onButtonClick"
            android:id="@+id/buttonProgressBarPrimaryIncrease" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감소"
            android:onClick="onButtonClick"
            android:id="@+id/buttonProgressBarPrimaryDecrease" />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Secondary Progress Control" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="증가"
            android:onClick="onButtonClick"
            android:id="@+id/buttonProgressBarSecondaryIncrease" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감소"
            android:onClick="onButtonClick"
            android:id="@+id/buttonProgressBarSecondaryDecrease" />

    </LinearLayout>


</LinearLayout>
